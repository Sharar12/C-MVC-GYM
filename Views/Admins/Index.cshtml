@model IEnumerable<GYM.Models.Admin>

@{
    ViewData["Title"] = "Admin List";
}

<h1 class="text-center mt-4">🛠️ Admin List</h1>



<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Id)</th>
                <th>@Html.DisplayNameFor(model => model.userName)</th>
                <th>@Html.DisplayNameFor(model => model.password)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.userName)</td>
                    <td>@Html.DisplayFor(modelItem => item.password)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a> 
                        
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="mt-4">
        <!-- Back Button - Returns to Admin Dashboard (hardcoded ID=1) -->
        <a href="@Url.Action("AdminAccount", "Account", new { id = 1 })" class="btn btn-secondary btn-lg">🔙 Back to Admin Dashboard</a>
    </div>
</div>

<!-- Optional: Add some custom styles -->
<style>
    body {
        background-color: #f8f9fa;
    }

    h1 {
        font-weight: bold;
        color: #2c3e50;
    }

    .table {
        font-size: 14px;
        border-collapse: collapse;
    }

        .table th, .table td {
            padding: 12px 15px;
            border: 1px solid #ddd;
            text-align: center;
            white-space: nowrap; /* Prevent text from wrapping */
            word-break: break-word; /* Break long words that overflow */
        }

        .table th {
            background-color: #f2f2f2;
            font-weight: bold;
        }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f9f9f9;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }

    .btn-sm {
        padding: 5px 15px;
        font-size: 14px;
    }

    .table-responsive {
        overflow-x: auto;
    }

    .btn {
        border-radius: 50px;
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
