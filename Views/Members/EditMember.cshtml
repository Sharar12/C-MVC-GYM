@model GYM.Models.Member

@{
    ViewData["Title"] = "Edit Member";
}

<h1 class="text-center mb-4">✏️ Edit Member</h1>
<hr class="my-4" />
<h4 class="text-center">Edit Member Details</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="EditMember" method="post">
            <!-- Validation Summary -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Hidden Input for ID -->
            <input type="hidden" asp-for="Id" />

            <!-- Name Field -->
            <div class="form-group mb-3">
                <label asp-for="name" class="control-label">👤 Full Name</label>
                <input asp-for="name" class="form-control" placeholder="Enter Full Name" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>

            <!-- Email Field -->
            <div class="form-group mb-3">
                <label asp-for="email" class="control-label">📧 Email Address</label>
                <input asp-for="email" class="form-control" placeholder="e.g., example@mail.com" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>

            <!-- Password Field -->
            <div class="form-group mb-3">
                <label asp-for="password" class="control-label">🔒 Password</label>
                <input asp-for="password" class="form-control" placeholder="Enter new password" />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>

            <!-- Gender Field (Hidden) -->
            @Html.HiddenFor(model => model.gender)

            <!-- Address Field -->
            <div class="form-group mb-3">
                <label asp-for="Address" class="control-label">🏠 Address</label>
                <input asp-for="Address" class="form-control" placeholder="Enter your address" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <!-- Phone Field -->
            <div class="form-group mb-3">
                <label asp-for="phone" class="control-label">📞 Phone Number</label>
                <input asp-for="phone" class="form-control" type="tel" maxlength="10" minlength="10" required placeholder="Enter 10-digit number" />
                <span asp-validation-for="phone" class="text-danger"></span>
            </div>

            <!-- Age Field -->
            <div class="form-group mb-3">
                <label asp-for="age" class="control-label">🎂 Age</label>
                <input asp-for="age" class="form-control" placeholder="Enter age" />
                <span asp-validation-for="age" class="text-danger"></span>
            </div>

            <!-- Weight Field -->
            <div class="form-group mb-3">
                <label asp-for="weight" class="control-label">⚖️ Weight (kg)</label>
                <input asp-for="weight" class="form-control" placeholder="Enter your weight" />
                <span asp-validation-for="weight" class="text-danger"></span>
            </div>

            <!-- Height Field -->
            <div class="form-group mb-3">
                <label asp-for="height" class="control-label">📏 Height (cm)</label>
                <input asp-for="height" class="form-control" placeholder="Enter your height" />
                <span asp-validation-for="height" class="text-danger"></span>
            </div>

            <!-- Hidden Inputs for other properties -->
            @Html.HiddenFor(model => model.package)
            @Html.HiddenFor(model => model.paymentMethod)
            @Html.HiddenFor(model => model.Class)
            @Html.HiddenFor(model => model.Schedule)
            @Html.HiddenFor(model => model.CreditCardNumber)
            @Html.HiddenFor(model => model.Tid)
            @Html.HiddenFor(model => model.amount)
            @Html.HiddenFor(model => model.Expire)

            <!-- Submit Button -->
            <div class="form-group text-center mb-4">
                <input type="submit" value="Save Changes" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>

<!-- Custom Styles -->
<style>
    body {
        background-color: #f8f9fa; /* Light background for the page */
    }

    .form-group label {
        font-weight: bold;
        color: #333;
    }

    .form-control {
        font-size: 1rem;
        padding: 15px;
        border-radius: 10px;
        border: 1px solid #ddd;
    }

        .form-control:focus {
            border-color: #007bff; /* Blue border on focus */
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

    .btn {
        font-size: 1.1rem;
        padding: 12px 25px;
        border-radius: 50px;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .text-danger {
        font-size: 0.9rem;
        color: #dc3545; /* Red color for validation errors */
    }

    hr {
        border-top: 2px solid #007bff;
    }

    .mt-4, .mb-4 {
        margin-top: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .my-4 {
        margin-top: 2rem;
        margin-bottom: 2rem;
    }
</style>
