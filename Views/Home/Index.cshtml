@model GYM.Models.Member
@{
    ViewData["Title"] = "Home Page";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet" />

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f4f7fa;
        color: #333;
    }

    .container {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h1.display-4 {
        font-weight: 600;
        color: #2c3e50;
    }

    .carousel-item img {
        width: 100%;
        height: 400px;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .carousel-item:hover img {
        transform: scale(1.1);
    }

    .carousel-caption {
        position: absolute;
        bottom: 20px;
        left: 50%;
        transform: translateX(-50%);
        background-color: rgba(0, 0, 0, 0.5);
        color: #fff;
        padding: 10px;
        border-radius: 5px;
    }

    .carousel-control-prev-icon, .carousel-control-next-icon {
        background-color: #2c3e50;
    }

    .nav-tabs {
        border-bottom: 2px solid #2c3e50;
    }

    .nav-link {
        font-weight: 500;
        color: #2c3e50;
        transition: all 0.3s ease;
    }

        .nav-link.active {
            color: #ffffff;
            background-color: #2c3e50;
            border-color: #2c3e50;
        }

    .form-label {
        font-weight: 500;
        color: #2c3e50;
    }

    .form-control {
        border-radius: 8px;
        box-shadow: none;
        border: 1px solid #ddd;
    }

        .form-control:focus {
            border-color: #2c3e50;
        }

    .btn {
        border-radius: 50px;
        padding: 10px 30px;
        font-weight: 600;
        letter-spacing: 1px;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background-color: #2c3e50;
        border: none;
    }

        .btn-primary:hover {
            background-color: #34495e;
        }

    .btn-success {
        background-color: #28a745;
        border: none;
    }

        .btn-success:hover {
            background-color: #218838;
        }

    .tab-pane {
        padding: 20px;
    }

    .col-md-6 {
        margin-bottom: 20px;
    }

    .lead {
        font-size: 1.25rem;
        color: #7f8c8d;
    }
</style>

<div class="container mt-5">

    <!-- Other Content -->
    <div class="text-center mb-5">
        <h1 class="display-4">💪 Welcome to FitLife Gym</h1>
        <p class="lead">Train hard. Stay strong. Join us today!</p>
    </div>
    <!-- Gym Photo Slider -->
    <div id="gymCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <!-- Image 1 -->
            <div class="carousel-item active">
                <img src="~/images/1.jpg" class="d-block w-100" alt="Gym 1">
                <div class="carousel-caption">
                    <h5>Train with the Best</h5>
                    <p>Join us for the ultimate fitness journey!</p>
                </div>
            </div>
            <!-- Image 2 -->
            <div class="carousel-item">
                <img src="~/images/2.jpeg" class="d-block w-100" alt="Gym 2">
                <div class="carousel-caption">
                    <h5>State-of-the-Art Equipment</h5>
                    <p>Our gym is equipped with the latest fitness technology.</p>
                </div>
            </div>
            <!-- Image 3 -->
            <div class="carousel-item">
                <img src="~/images/3.jpg" class="d-block w-100" alt="Gym 3">
                <div class="carousel-caption">
                    <h5>Motivation and Support</h5>
                    <p>Our trainers are here to guide you every step of the way.</p>
                </div>
            </div>
            <!-- Image 4 -->
            <div class="carousel-item">
                <img src="~/images/4.jpg" class="d-block w-100" alt="Gym 4">
                <div class="carousel-caption">
                    <h5>Fitness for Everyone</h5>
                    <p>Whether you're a beginner or a pro, we have something for you!</p>
                </div>
            </div>
            <!-- Image 5 -->
            <div class="carousel-item">
                <img src="~/images/5.jpg" class="d-block w-100" alt="Gym 5">
                <div class="carousel-caption">
                    <h5>Your Fitness Journey Starts Here</h5>
                    <p>Join us and take the first step towards a healthier you!</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#gymCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#gymCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <div class="container mt-5">
        <div class="row">
            <!-- Basic Plan -->
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Basic Plan</h5>
                        <p class="card-text">Ideal for individuals looking to try out the gym or those with short-term fitness goals.</p>
                        <p class="card-text"><strong>Tk. 1,000</strong> / 1 Month</p>
                        <p class="card-text"><small class="text-muted">Cost per Month: Tk. 1,000</small></p>
                        <!-- Link to scroll down to the plan details -->
                        <a href="#planDetails" class="btn btn-primary">Join Now</a>
                    </div>
                </div>
            </div>

            <!-- Premium Plan -->
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Premium Plan</h5>
                        <p class="card-text">For regular gym-goers seeking a mid-term commitment with added benefits.</p>
                        <p class="card-text"><strong>Tk. 5,000</strong> / 6 Months</p>
                        <p class="card-text"><small class="text-muted">Cost per Month: Tk. 833.33</small></p>
                        <p class="card-text"><small class="text-muted">16.67% discount compared to Basic Plan</small></p>
                        <a href="#planDetails" class="btn btn-primary">Join Now</a>
                    </div>
                </div>
            </div>

            <!-- Gold Plan -->
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Gold Plan</h5>
                        <p class="card-text">For dedicated fitness enthusiasts aiming for long-term results and maximum value.</p>
                        <p class="card-text"><strong>Tk. 9,000</strong> / 12 Months</p>
                        <p class="card-text"><small class="text-muted">Cost per Month: Tk. 750</small></p>
                        <p class="card-text"><small class="text-muted">25% discount compared to Basic Plan</small></p>
                        <a href="#planDetails" class="btn btn-primary">Join Now</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Plan Details Section (Where users will scroll to) -->
        <div id="planDetails" class="mt-5 p-4 border rounded">
            <h2>Join Now and Start Your Fitness Journey</h2>
            <p>Thank you for showing interest in our gym membership plans! Please select your preferred plan above and start your fitness journey with us!</p>
            <p>If you have any questions or need assistance, our staff is available to help you!</p>
        </div>
    </div>

    <!-- Smooth Scroll JS (Optional but recommended for cross-browser compatibility) -->
    <script>
        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });
    </script>


    <ul class="nav nav-tabs" id="signupTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="member-tab" data-bs-toggle="tab" data-bs-target="#member" type="button" role="tab">🧍 Member Signup</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="employee-tab" data-bs-toggle="tab" data-bs-target="#employee" type="button" role="tab">👨‍💼 Employee Signup</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="admin-tab" data-bs-toggle="tab" data-bs-target="#admin" type="button" role="tab">🔐 Admin Login</button>
        </li>
    </ul>

    <div class="tab-content p-4 border border-top-0" id="signupTabsContent">

        <!-- Member Signup Form -->
        <div class="tab-pane fade show active" id="member" role="tabpanel">
            <form asp-action="Signup" asp-controller="Members" method="post" id="signupForm">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">👤 Name</label>
                        <input type="text" class="form-control" name="name" required placeholder="Enter your full name" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">📧 Email</label>
                        <input type="email" class="form-control" name="email" required placeholder="e.g., example@mail.com" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">🔒 Password</label>
                        <input type="password" class="form-control" name="password" required minlength="8" placeholder="Minimum 8 characters" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">⚧ Gender</label>
                        <select class="form-select" name="gender" required>
                            <option selected disabled>Choose your gender...</option>
                            <option>Male</option>
                            <option>Female</option>
                            <option>Other</option>
                        </select>
                    </div>
                    <div class="col-md-12">
                        <label class="form-label">🏠 Address</label>
                        <input type="text" class="form-control" name="address" required placeholder="Enter your street, city, and zip code" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">📞 Phone</label>
                        <input type="number" class="form-control" name="phone" required placeholder="+880xxxxxxxxxx" min="1000000000" max="9999999999" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">🎂 Age</label>
                        <input type="number" class="form-control" name="age" min="15" max="120" required placeholder="Enter your age (15 - 120)" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">⚖️ Weight (kg)</label>
                        <input type="number" class="form-control" name="weight" min="40" required placeholder="Enter your weight in kg" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">📏 Height (cm)</label>
                        <input type="number" class="form-control" name="height" min="100" required placeholder="Enter your height in cm" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">📦 Package</label>
                        <select class="form-select" name="package" required>
                            <option selected disabled>Choose...</option>
                            <option>Basic</option>
                            <option>Premium</option>
                            <option>Gold</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">💳 Payment Method</label>
                        <select class="form-select" name="paymentMethod" id="paymentMethod" required>
                            <option selected disabled>Choose...</option>
                            <option>Credit Card</option>
                            <option>Debit Card</option>
                            <option>Cash</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">💳 Credit Card Number</label>
                        <input type="text" class="form-control" name="CreditCardNumber" pattern="^\d{16}$" maxlength="16" placeholder="Enter 16-digit card number" required />
                    </div>

                    <input type="hidden" name="Class" value="Not Assigned Yet" />
                    <input type="hidden" name="Schedule" value="Not Assigned Yet" />
                    <input type="hidden" name="Tid" value="@Guid.NewGuid()" />
                    <input type="hidden" name="amount" value="1000" />
                    <input type="hidden" name="Expire" value="1" />

                    <div id="adminMessage" class="alert alert-warning mt-3" style="display: none;">
                        💬 Please talk to Admin for Cash payments.
                    </div>
                </div>

                <button type="submit" class="btn btn-primary mt-4" id="signupBtn">Sign Up</button>
            </form>
        </div>

        <script>
            document.getElementById('paymentMethod').addEventListener('change', function () {
                var paymentMethod = this.value;
                var signupBtn = document.getElementById('signupBtn');
                var adminMessage = document.getElementById('adminMessage');

                if (paymentMethod === 'Cash') {
                    signupBtn.disabled = true;  // Disable the sign up button
                    adminMessage.style.display = 'block';  // Show the "Talk to Admin" message
                } else {
                    signupBtn.disabled = false;  // Enable the sign up button
                    adminMessage.style.display = 'none';  // Hide the "Talk to Admin" message
                }
            });
        </script>

        <!-- Employee Signup Form -->
        <div class="tab-pane fade" id="employee" role="tabpanel">
            <form asp-action="Register" asp-controller="Employees" method="post">
                <div class="row g-3">
                    <!-- Name -->
                    <div class="col-md-6">
                        <label class="form-label">👤 Name</label>
                        <input type="text" class="form-control" name="name" placeholder="Enter full name" required />
                    </div>

                    <!-- Email -->
                    <div class="col-md-6">
                        <label class="form-label">📧 Email</label>
                        <input type="email" class="form-control" name="email" placeholder="Enter valid email" required />
                    </div>

                    <!-- Password -->
                    <div class="col-md-6">
                        <label class="form-label">🔒 Password</label>
                        <input type="password" class="form-control" name="password"
                               pattern=".{8,}" title="Password must be at least 8 characters"
                               placeholder="Minimum 8 characters" required />
                    </div>

                    <!-- Age -->
                    <div class="col-md-6">
                        <label class="form-label">🎂 Age</label>
                        <input type="number" class="form-control" name="age"
                               min="15" max="60" placeholder="Age between 15 and 60" required />
                    </div>

                    <!-- Address -->
                    <div class="col-md-12">
                        <label class="form-label">🏠 Address</label>
                        <input type="text" class="form-control" name="address" placeholder="Street, City, ZIP" required />
                    </div>

                    <!-- Phone -->
                    <div class="col-md-6">
                        <label class="form-label">📞 Phone</label>
                        <input type="tel" class="form-control" name="phone"
                               placeholder="+8801234567890"
                               title="Phone must start with +880 and be 13 digits total" required />
                    </div>

                    <!-- Gender -->
                    <div class="col-md-6">
                        <label class="form-label">⚧️ Gender</label>
                        <select class="form-select" name="gender" required>
                            <option selected disabled value="">Choose...</option>
                            <option>Male</option>
                            <option>Female</option>
                            <option>Other</option>
                        </select>
                    </div>

                    <!-- Role -->
                    <div class="col-md-6">
                        <label class="form-label">🧑‍💼 Role</label>
                        <select class="form-select" name="role" required>
                            <option selected disabled value="">Choose Role...</option>
                            <option>Trainer</option>
                            <option>Medic</option>
                            <option>Receptionist</option>
                        </select>
                    </div>

                    <!-- Experience -->
                    <div class="col-md-6">
                        <label class="form-label">📚 Experience</label>
                        <input type="text" class="form-control" name="experience" placeholder="e.g., 2 years, Gym ABC" required />
                    </div>

                    <!-- Schedule -->
                    <div class="col-12">
                        <label class="form-label">🗓️ Schedule</label>
                        <select class="form-select" name="schedule" required>
                            <option selected disabled value="">Choose Schedule...</option>
                            <option>Mon - Fri (9 AM - 1 PM)</option>
                            <option>Mon - Fri (1 PM - 5 PM)</option>
                            <option>Mon - Fri (5 PM - 9 PM)</option>
                            <option>Sat - Sun (9 AM - 1 PM)</option>
                            <option>Sat - Sun (1 PM - 5 PM)</option>
                            <option>Sat - Sun (5 PM - 9 PM)</option>
                            <option>Flexible / Rotating</option>
                        </select>
                    </div>
                </div>

                <button type="submit" class="btn btn-success mt-4">Register</button>
            </form>
        </div>

        <!-- Admin Login Form -->
        <div class="tab-pane fade" id="admin" role="tabpanel">
            <form asp-controller="Admins" asp-action="Login" method="post">
                <div class="mb-3">
                    <label class="form-label">Username</label>
                    <input type="text" class="form-control" name="userName" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input type="password" class="form-control" name="password" required />
                </div>
                <button type="submit" class="btn btn-danger">Login</button>
            </form>
        </div>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
