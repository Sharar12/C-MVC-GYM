@model GYM.Models.Employee

@{
    ViewData["Title"] = "Edit Employee";
}

<h1 class="text-center mb-4">✏️ Edit Employee</h1>
<hr class="my-4" />
<h4 class="text-center">Edit Employee Details</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="EditEmployee" method="post">
            <!-- Validation Summary -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Hidden Input for ID -->
            <input type="hidden" asp-for="Id" />

            <!-- Name Field -->
            <div class="form-group mb-3">
                <label asp-for="name" class="control-label">👤 Full Name</label>
                <input asp-for="name" class="form-control" placeholder="Enter Full Name" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>

            <!-- Email Field -->
            <div class="form-group mb-3">
                <label asp-for="email" class="control-label">📧 Email Address</label>
                <input asp-for="email" class="form-control" placeholder="e.g., example@mail.com" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>

            <!-- Password Field -->
            <div class="form-group mb-3">
                <label asp-for="password" class="control-label">🔒 Password</label>
                <input asp-for="password" class="form-control" placeholder="Enter new password" />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>

            <!-- Age Field -->
            <div class="form-group mb-3">
                <label asp-for="age" class="control-label">🎂 Age</label>
                <input asp-for="age" class="form-control" placeholder="Enter age" />
                <span asp-validation-for="age" class="text-danger"></span>
            </div>

            <!-- Address Field -->
            <div class="form-group mb-3">
                <label asp-for="address" class="control-label">🏠 Address</label>
                <input asp-for="address" class="form-control" placeholder="Enter address" />
                <span asp-validation-for="address" class="text-danger"></span>
            </div>

            <!-- Phone Field -->
            <div class="form-group mb-3">
                <label asp-for="phone" class="control-label">📞 Phone Number</label>
                <input asp-for="phone" class="form-control" placeholder="Enter 10-digit phone number" />
                <span asp-validation-for="phone" class="text-danger"></span>
            </div>

            <!-- Gender Field (Hidden) -->
            @Html.HiddenFor(model => model.gender)

            <!-- Role Field (Hidden) -->
            @Html.HiddenFor(model => model.role)

            <!-- Experience Field -->
            <div class="form-group mb-3">
                <label asp-for="experience" class="control-label">📚 Experience</label>
                <input asp-for="experience" class="form-control" placeholder="Enter work experience" />
                <span asp-validation-for="experience" class="text-danger"></span>
            </div>

            <!-- Schedule Field -->
            <div class="form-group mb-3">
                <label class="form-label">🗓️ Schedule</label>
                <select class="form-select" name="schedule" required>
                    <option selected disabled value="">Choose Schedule...</option>
                    <option>Mon - Fri (9 AM - 1 PM)</option>
                    <option>Mon - Fri (1 PM - 5 PM)</option>
                    <option>Mon - Fri (5 PM - 9 PM)</option>
                    <option>Sat - Sun (9 AM - 1 PM)</option>
                    <option>Sat - Sun (1 PM - 5 PM)</option>
                    <option>Sat - Sun (5 PM - 9 PM)</option>
                    <option>Flexible / Rotating</option>
                </select>
            </div>

            <!-- Submit Button -->
            <div class="form-group text-center mb-4">
                <input type="submit" value="Save Changes" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>

<!-- Custom Styles -->
<style>
    body {
        background-color: #f8f9fa; /* Light background for the page */
    }

    .form-group label {
        font-weight: bold;
        color: #333;
    }

    .form-control {
        font-size: 1rem;
        padding: 15px;
        border-radius: 10px;
        border: 1px solid #ddd;
    }

        .form-control:focus {
            border-color: #007bff; /* Blue border on focus */
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

    .btn {
        font-size: 1.1rem;
        padding: 12px 25px;
        border-radius: 50px;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .text-danger {
        font-size: 0.9rem;
        color: #dc3545; /* Red color for validation errors */
    }

    hr {
        border-top: 2px solid #007bff;
    }

    .mt-4, .mb-4 {
        margin-top: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .my-4 {
        margin-top: 2rem;
        margin-bottom: 2rem;
    }
</style>
