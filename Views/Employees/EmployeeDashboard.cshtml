        font-weight: bold;
        color: #2c3e50;
    }

    .card {
        border: none;
        border-radius: 15px;
        background-color: #ffffff;
    }

    .btn {
        font-size: 16px;
        font-weight: 500;
        border-radius: 50px;
        padding: 12px 30px;
    }

    .btn-primary {
        background-color: #2c3e50;
    }

        .btn-primary:hover {
            background-color: #34495e;
        }

    .btn-info {
        background-color: #17a2b8;
    }

        .btn-info:hover {
            background-color: #138496;
        }

    .btn-secondary {
        background-color: #6c757d;
    }

        .btn-secondary:hover {
