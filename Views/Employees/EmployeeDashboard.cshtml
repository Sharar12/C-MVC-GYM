@model GYM.Models.Employee

@{
    ViewData["Title"] = "Employee Dashboard";
}

<h2 class="text-center mt-4">👨‍💼 Employee Dashboard</h2>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-body">
                    <!-- Profile Details Box -->
                    <div class="mb-4">
                        <h4 class="card-title text-center mb-3">👤 Profile Details</h4>
                        <div class="card shadow-sm p-3 mb-3 bg-light rounded">
                            <p><strong>Name:</strong> @Model.name</p>
                            <p><strong>ID:</strong> @Model.Id</p>
                            <p><strong>Email:</strong> @Model.email</p>
                            <p><strong>Gender:</strong> @Model.gender</p>
                            <p><strong>Phone:</strong> @Model.phone</p>
                            <p><strong>Address:</strong> @Model.address</p>
                            <p><strong>Age:</strong> @Model.age</p>
                        </div>
                    </div>

                    <!-- Job Information Box -->
                    <div class="mb-4">
                        <h4 class="card-title text-center mb-3">💼 Job Information</h4>
                        <div class="card shadow-sm p-3 mb-3 bg-light rounded">
                            <p><strong>Role:</strong> @Model.role</p>
                            <p><strong>Experience:</strong> @Model.experience</p>
                            <p><strong>Schedule:</strong> @Model.schedule</p>
                        </div>
                    </div>

                    <!-- Action Buttons Box -->
                    <div class="text-center mt-4">
                        <a asp-action="EditEmployee" asp-controller="Employees" asp-route-id="@Model.Id" class="btn btn-primary me-3">✏️ Edit Profile</a>
                        <a asp-action="ViewMembers" asp-controller="Employees" class="btn btn-info me-3">💪 View Members</a>
                    </div>

                    <!-- Move the Logout Button One Step Down -->
                    <div class="text-center mt-4">
                        <!-- Added margin-top (mt-4) to move the Logout button down -->
                        <a href="/Home/Index" class="btn btn-secondary">🚪 Logout</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Optional: Add some custom styles -->
