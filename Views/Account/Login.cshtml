@{
    ViewData["Title"] = "Login";
}

<h2 class="text-center mt-4">Login</h2>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Increased the column size to 8 -->
            <!-- Login Form -->
            <form asp-action="Accounts" method="post" class="mt-4 shadow-sm p-4 bg-light rounded">
                <div class="mb-3">
                    <label class="form-label" for="email">Email</label>
                    <input type="email" name="email" class="form-control" id="email" placeholder="Enter your email" required />
                </div>

                <div class="mb-3">
                    <label class="form-label" for="password">Password</label>
                    <input type="password" name="password" class="form-control" id="password" placeholder="Enter your password" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Login As</label>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="role" value="Member" checked />
                        <label class="form-check-label">Member</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="role" value="Employee" />
                        <label class="form-check-label">Employee</label>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary w-100">Login</button>
            </form>
        </div>
    </div>
</div>

<!-- Optional: Add some custom styles -->
<style>
    body {
        background-color: #f8f9fa;
    }

    h2 {
        font-family: 'Arial', sans-serif;
        color: #2c3e50;
    }

    .form-label {
        font-weight: bold;
        color: #2c3e50;
    }

    .form-control {
        border-radius: 8px;
        padding: 10px;
    }

    .form-check-input {
        margin-top: 0.25rem;
    }

    .form-check-label {
        font-weight: 500;
        color: #2c3e50;
    }

    .btn-primary {
        background-color: #2c3e50;
        border: none;
        padding: 12px;
        font-size: 16px;
        font-weight: bold;
    }

        .btn-primary:hover {
            background-color: #34495e;
        }

    .container {
        max-width: 800px; /* Increased max-width to 800px for a wider form */
    }

    .card {
        margin-top: 30px;
        border: 1px solid #ddd;
    }

    .card-body {
        padding: 20px;
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
