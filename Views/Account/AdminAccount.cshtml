@model GYM.Models.Admin

@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2 class="text-center mt-4">🛠️ Admin Dashboard</h2>

<div class="container mt-5">
    <!-- Box/Container for Dashboard Content -->
    <div class="card shadow-sm p-4 bg-light rounded">
        <div class="text-center">
            <h4>Welcome, @Model.userName!</h4>

            <div class="mt-4">
                <a href="/Members/Index" class="btn btn-primary btn-lg me-3">👤 Members</a>
                <a href="/Employees/Index" class="btn btn-success btn-lg me-3">👨‍💼 Employees</a>
                <a href="/Admins/Index" class="btn btn-warning btn-lg me-3">🛡️ Admins</a>
                <a href="/Home/Index" class="btn btn-secondary btn-lg">🚪 Logout</a>
            </div>
        </div>
    </div>
</div>

<!-- Optional: Add some custom styles -->
<style>
    body {
        background-color: #f8f9fa;
    }

    h4 {
        font-weight: bold;
        color: #2c3e50;
    }

    .card {
        border: none;
        border-radius: 15px;
        background-color: #ffffff;
    }

    .btn {
        font-size: 16px;
        font-weight: 500;
        border-radius: 50px;
        padding: 12px 30px;
    }

    .btn-primary {
        background-color: #2c3e50;
    }

        .btn-primary:hover {
            background-color: #34495e;
        }

    .btn-success {
        background-color: #28a745;
    }

        .btn-success:hover {
            background-color: #218838;
        }

    .btn-warning {
        background-color: #ffc107;
    }

        .btn-warning:hover {
            background-color: #e0a800;
        }

    .btn-secondary {
        background-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }
</style>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
